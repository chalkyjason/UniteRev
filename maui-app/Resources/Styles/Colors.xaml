<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary palette -->
    <Color x:Key="Primary">#667eea</Color>
    <Color x:Key="PrimaryDark">#5568d3</Color>
    <Color x:Key="PrimaryLight">#8b9df0</Color>
    <Color x:Key="Secondary">#764ba2</Color>

    <!-- Backgrounds -->
    <Color x:Key="BackgroundDark">#0f172a</Color>
    <Color x:Key="BackgroundMedium">#1e293b</Color>
    <Color x:Key="BackgroundCard">#334155</Color>
    <Color x:Key="BackgroundLight">#f8fafc</Color>
    <Color x:Key="BackgroundCardLight">#ffffff</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#f8fafc</Color>
    <Color x:Key="TextSecondary">#94a3b8</Color>
    <Color x:Key="TextDark">#1e293b</Color>
    <Color x:Key="TextMuted">#64748b</Color>

    <!-- Status colors -->
    <Color x:Key="Success">#22c55e</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Danger">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    <Color x:Key="Live">#ef4444</Color>

    <!-- Platform colors -->
    <Color x:Key="TwitchPurple">#9146ff</Color>
    <Color x:Key="YouTubeRed">#ff0000</Color>
    <Color x:Key="KickGreen">#53fc18</Color>
    <Color x:Key="FacebookBlue">#1877f2</Color>

    <!-- Borders -->
    <Color x:Key="BorderLight">#e2e8f0</Color>
    <Color x:Key="BorderDark">#475569</Color>

    <!-- Grays -->
    <Color x:Key="Gray100">#e2e8f0</Color>
    <Color x:Key="Gray200">#cbd5e1</Color>
    <Color x:Key="Gray300">#94a3b8</Color>
    <Color x:Key="Gray400">#64748b</Color>
    <Color x:Key="Gray500">#475569</Color>
    <Color x:Key="Gray600">#334155</Color>
    <Color x:Key="Gray900">#0f172a</Color>

</ResourceDictionary>
